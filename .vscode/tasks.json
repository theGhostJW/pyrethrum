  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "hpack",
        "cabal build"
      ]
    },
    {
      "label": "build restart ghcid",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build",
        "ghcid"
      ]
    },
    {
      "label": "ghcid",
      "type": "shell",
      "command": "ghcid",
      "args": [
        "--command",
        "'cabal repl'",
        "--allow-eval",
        "--clear",
        "--no-height-limit",
        "-o ghcid.log"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
