    {
      "label": "hpack",
      "type": "process",
      "command": "hpack",
      "args": [
        "--force"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "cabal build",
      "type": "shell",
      "command": "cabal",
      "args": [
        "build",
        "--flags='-optimised +godLibrary'"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "cabal build CI",
      "type": "shell",
      "command": "cabal",
      "args": [
        "build",
        "--flags='+optimised -godLibrary'"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "cabal test",
      "type": "shell",
      "command": "cabal",
      "args": [
        "test",
        "--test-show-details=streaming"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
