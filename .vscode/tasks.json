{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ghcid",
      "type": "shell",
      "command": "ghcid",
      "args": [
        "--command",
        "'cabal repl'",
        "--allow-eval",
        "--clear",
        "--no-height-limit",
        "-o ghcid.log"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "hpack",
      "type": "process",
      "command": "hpack",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "cabal build",
      "type": "shell",
      "command": "cabal",
      "args": [
        "build"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "cabal test",
      "type": "shell",
      "command": "cabal",
      "args": [
        "test",
        "-j4 +RTS -A128m -n2m -RTS"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}