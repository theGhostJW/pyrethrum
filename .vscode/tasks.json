{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ghcid",
      "type": "shell",
      "command": "ghcid",
      "args": [
        "--command",
        "'stack ghci --test'",
        "--allow-eval",
        "--clear",
        "--no-height-limit",
        "-o ghcid.log"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "stack build",
      "type": "shell",
      "command": "stack",
      "args": [
        "build",
        "--fast",
        "--ghc-options",
        "-j4 +RTS -A128m -n2m -RTS"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "stack build watch",
      "type": "shell",
      "command": "stack",
      "args": [
        "build",
        "--file-watch",
        "--fast",
        "--ghc-options",
        "-j4 +RTS -A128m -n2m -RTS"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "stack test",
      "type": "shell",
      "command": "stack",
      "args": [
        "test",
        "--fast",
        "--ghc-options",
        "-j4 +RTS -A128m -n2m -RTS"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "stack test watch",
      "type": "shell",
      "command": "stack",
      "args": [
        "test",
        "--file-watch",
        "--fast",
        "--ghc-options",
        "-j4 +RTS -A128m -n2m -RTS"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}